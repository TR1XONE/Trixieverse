# ===================================\n# TRIXIEVERSE PRODUCTION ENVIRONMENT\n# ===================================\n\n# ===== SERVER CONFIGURATION =====\nNODE_ENV=production\nPORT=3000\nHOST=0.0.0.0\nLOG_LEVEL=info\n\n# ===== DATABASE =====\nDATABASE_URL=postgresql://user:password@localhost:5432/trixieverse\nDATABASE_POOL_MIN=5\nDATABASE_POOL_MAX=20\nDATABASE_POOL_IDLE_TIMEOUT=30000\n\n# ===== REDIS CACHE =====\nREDIS_URL=redis://localhost:6379\nREDIS_PASSWORD=your-redis-password\nREDIS_TTL=3600\n\n# ===== JWT AUTHENTICATION =====\nJWT_SECRET=your-super-secret-jwt-key-change-this\nJWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this\nJWT_EXPIRY=24h\nJWT_REFRESH_EXPIRY=7d\n\n# ===== STRIPE PAYMENT =====\nSTRIPE_SECRET_KEY=sk_live_your_stripe_secret_key\nSTRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key\nSTRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret\nSTRIPE_WEBHOOK_URL=https://api.trixieverse.com/api/webhooks/stripe\n\n# ===== EMAIL CONFIGURATION =====\nSMTP_HOST=smtp.sendgrid.net\nSMTP_PORT=587\nSMTP_USER=apikey\nSMTP_PASS=SG.your_sendgrid_api_key\nSMTP_FROM=noreply@trixieverse.com\nSMTP_FROM_NAME=TrixieVerse\nEMAIL_SUPPORT=support@trixieverse.com\n\n# ===== RIOT GAMES API =====\nRIOT_API_KEY=your-riot-api-key\nRIOT_API_REGION=euw1\nRIOT_API_RATE_LIMIT=20\n\n# ===== DISCORD BOT =====\nDISCORD_TOKEN=your_discord_bot_token\nDISCORD_CLIENT_ID=your_discord_client_id\nDISCORD_CLIENT_SECRET=your_discord_client_secret\nDISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/your_webhook_id/your_webhook_token\n\n# ===== SENTRY ERROR TRACKING =====\nSENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id\nSENTRY_ENVIRONMENT=production\nSENTRY_TRACES_SAMPLE_RATE=0.1\n\n# ===== DATADOG APM =====\nDATADOG_API_KEY=your_datadog_api_key\nDATADOG_SITE=datadoghq.com\nDATADOG_ENV=production\nDATADOG_SERVICE=trixieverse\n\n# ===== GOOGLE ANALYTICS =====\nGOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X\nGOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX\n\n# ===== CORS CONFIGURATION =====\nCORS_ORIGIN=https://trixieverse.com,https://www.trixieverse.com,https://app.trixieverse.com\nCORS_CREDENTIALS=true\n\n# ===== RATE LIMITING =====\nRATE_LIMIT_WINDOW_MS=900000\nRATE_LIMIT_MAX_REQUESTS=100\nRATE_LIMIT_AUTH_WINDOW_MS=900000\nRATE_LIMIT_AUTH_MAX_REQUESTS=10\nRATE_LIMIT_API_WINDOW_MS=60000\nRATE_LIMIT_API_MAX_REQUESTS=1000\n\n# ===== SECURITY =====\nBCRYPT_ROUNDS=12\nSESSION_SECRET=your-session-secret-key\nCSRF_PROTECTION=true\nHELMET_ENABLED=true\n\n# ===== CACHE SETTINGS =====\nCACHE_ENABLED=true\nCACHE_TTL=3600\nCACHE_MAX_SIZE=1000\nCACHE_COMPRESSION_THRESHOLD=1024\n\n# ===== PERFORMANCE =====\nCOMPRESSION_ENABLED=true\nCOMPRESSION_LEVEL=6\nCOMPRESSION_THRESHOLD=1024\nPAGINATION_DEFAULT_LIMIT=20\nPAGINATION_MAX_LIMIT=100\n\n# ===== LOGGING =====\nLOG_FORMAT=json\nLOG_LEVEL=info\nLOG_FILE_PATH=/var/log/trixieverse/app.log\nLOG_MAX_SIZE=10485760\nLOG_MAX_FILES=10\n\n# ===== FRONTEND CONFIGURATION =====\nVITE_API_URL=https://api.trixieverse.com\nVITE_WS_URL=wss://api.trixieverse.com\nVITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key\nVITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X\n\n# ===== FEATURE FLAGS =====\nFEATURE_PREMIUM_ENABLED=true\nFEATURE_SOCIAL_ENABLED=true\nFEATURE_TOURNAMENTS_ENABLED=true\nFEATURE_DISCORD_BOT_ENABLED=true\nFEATURE_STREAMING_ENABLED=true\nFEATURE_REPLAY_ANALYSIS_ENABLED=true\n\n# ===== MAINTENANCE =====\nMAINTENANCE_MODE=false\nMAINTENANCE_MESSAGE=We are performing scheduled maintenance. Please check back soon.\n\n# ===== BACKUP =====\nBACKUP_ENABLED=true\nBACKUP_SCHEDULE=0 2 * * *\nBACKUP_RETENTION_DAYS=30\nBACKUP_STORAGE_PATH=/backups\n\n# ===== MONITORING =====\nMONITORING_ENABLED=true\nMONITORING_INTERVAL=60000\nMONITORING_ALERT_THRESHOLD=0.8\n\n# ===== CUSTOM DOMAIN =====\nDOMAIN=trixieverse.com\nWWW_DOMAIN=www.trixieverse.com\nAPI_DOMAIN=api.trixieverse.com\nAPP_DOMAIN=app.trixieverse.com\n\n# ===== TIMEZONE =====\nTIMEZONE=UTC\n\n# ===== VERSION =====\nAPP_VERSION=1.0.0\nBUILD_DATE=2026-01-07\n
